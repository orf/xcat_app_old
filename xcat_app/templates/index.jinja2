<html>
<body>
<a href="/">Search Books:</a>
<form action='/' method='GET'>
    <input type='text' name='title' size=50 value="{{ query }}">
    <select name="type">
        <option value="*">All</option>
        <option value="books">Books</option>
        <option value="videos">Videos</option>
    </select>
    <select name="rent_days">
        <option value="*">Any</option>
        <option value="5">5 Days</option>
        <option value="10">10 Days</option>
    </select>
    <input type='submit'>
</form>
<br/>
{% for item in results %}
    <hr/>
    <strong><a href="{{ url_for('rental', id=item.id) }}">{{ item.title }}</a></strong>
    <br/>
    {% for key, value in item.items() %}
        {% if key not in ("title", "img", "id") %}
            {{ key }}: {{ value }}
        {% endif %}
    {% endfor %}
{% endfor %}
</body>
</html>